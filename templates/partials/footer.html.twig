<footer id="page-footer">

	<ul>
		<li><a href="{{ site.author.site }}" class="no-u">{{ site.author.site_title }}</a></li>

		{% for p in pages.children %}{% if p.visible %}
			<li><a href="{{ p.rawRoute() }}" class="no-u">{{ p.title }}</a></li>
		{% endif %}{% endfor %}
	</ul>
	<div class="greatbarrierrief">
		<h3>Subscribe</h3>
		<ul>
			<li>
				<a href="{{ site.rss }}" class="no-u feed"></a>
			</li>
			<li>
				<a href="http://twitter.com/{{ site.twitter_site }}" class="no-u donut"></a>
			</li>
			<li>
				<a href="http://store.steampowered.com/curator/{{ site.steam_curator_id }}/"  class="no-u steam"></a>
			</li>
		</ul>
	</div>
</footer>