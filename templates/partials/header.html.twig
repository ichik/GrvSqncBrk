{% if page.url(true) == base_url_absolute %}
	<h1>{{ site.title }}</h1>
{% else %}
	<a href="/" id="backtoindex">
		<h1>{{ site.title }}</h1>
	</a>
{% endif %}

	<input type="checkbox" id="nav-trigger" class="nav-trigger" />
	<label for="nav-trigger" id="open-button">
    	<div class="spinner diagonal part-1"></div>
    	<div class="spinner horizontal"></div>
    	<div class="spinner diagonal part-2"></div>
    </label>

	<div class="menu-wrap" id="morphSearch">
    	<div class="hamburger-insides">
			<nav id="about-links">
				<ul>
				{% for p in pages.children %}{% if p.visible %}
					<li><a href="{{ p.rawRoute() }}" class="no-u"><span>{{ p.title }}</span></a></li>
				{% endif %}{% endfor %}
					<li><a href="/en{{ page.rawRoute() }}" class="no-u"><span>In English</span>a></a></li>
				</ul>
			</nav>
			{% include 'partials/simplesearch_searchbox.html.twig' %}
		</div>
	</div>
