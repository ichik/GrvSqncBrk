<article class="sqncbrk-post">
  <a href="{{ page.rawRoute }}">
    <div class="cover b-lazy" data-src="{{ page.media['cover.jpg'].url }}" data-src-small="{{ page.media['cover.jpg'].cropResize(750,420).url }}">
  	</div>
    <div class="post-content">
      <header class="entry-meta">
        <time class="entry-date" datetime="{{ page.date|date('Y-m-d') }}">{{ 'SQNC_MONTHS'|ta(page.date|date('n') - 1) }} {{ page.date|date('d') }}, {{ page.date|date('Y') }}</time>
      </header>
      <footer>
          <h2 class="entry-title">{{ page.title }}</h2>
      </footer>
    </div>
  </a>
</article>
